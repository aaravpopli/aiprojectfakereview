
<% layout('./boilerplate/boiler.ejs') -%>
<h2>Your Shopping Cart</h2>
<% if (cartItems.length === 0) { %>
  <p>Your cart is empty.</p>
<% } else { %>
  <div class="cart-container">
    <ul class="cart-items">
      <% for (let i of cartItems) { %>
        <li class="cart-item">
          <div class="cart-item-image">
            <img src="<%= i.productId.image %>" alt="<%= i.productId.name %>">
          </div>
          <div class="cart-item-details">
            <h3 class="cart-item-name"><%= i.productId.name %></h3>
            <p class="cart-item-quantity">Quantity: <%= i.quantity %></p>
            <p class="cart-item-price">Price:â‚¹ <%= i.productId.price %></p>
            <form action="/update-cart/<%= i.productId._id %>" method="POST" class="cart-item-form">
              <button type="submit" name="action" value="increment" class="btn btn-increment">+</button>
              <button type="submit" name="action" value="decrement" class="btn btn-decrement">-</button>
            </form>
          </div>
        </li>
      <% } %>
    </ul>
    <h3>Total Amount: Rs.<%= Amount.toFixed(2) %></h3>
  </div>
<% } %>
